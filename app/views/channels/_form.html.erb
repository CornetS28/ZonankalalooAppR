<%= simple_form_for(@channel) do |f| %>
  <%= f.error_notification %>

 <div class="field">
   <div class="input-block-level">
     <%= f.input :channel, input_html: { class: 'input', placeholder:"Nom de la catégorie" }, wrapper: false, label_html: { class: 'label' } %>
   </div>
 </div>

  <div class="field" style="margin-bottom:12%;">
    <div class="control">
      <%= f.button :submit, 'Creez Une Catégorie', class:"btn-style btn-md bo-ra-5" %>
    </div>
  </div>
<% end %>