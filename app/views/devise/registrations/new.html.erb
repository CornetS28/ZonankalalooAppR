<% provide(:title, "Enregistrez") %>

<div class="main-area">
    <section class="help-us-area pt-80 pb-80"> 
        <div class="container"> 
            <div class="row"> 
                <div class="col-sm-12"> 
                    <div class="section-title-style-two text-center">
                        <h2>VOUS VOULEZ PARTICIPER DANS DISCUSSION?</h2>
                            <div class="form"> 
                                <ul class="tab-group">
                                    <li class="tab active"><a href="#signup">Enregistrez-Vous</a></li>
                                    <li class="tab"><a href="#login">Rantre</a></li>
                                </ul>

                                <div class="tab-content">
                                    <div id="signup">   
                                        <h2>Enregistrez-vous Gratuitement</h2>
                                        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                            <%= f.error_notification %>
                                            <div class="top-row">
                                              <div class="field-wrap">
                                                 </i><%= f.input :username, label: "Prenom", required: true, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                              </div>
                                              <div class="field-wrap">
                                                 <%= f.input :userlastname, label: "Nom de famille", required: true, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                              </div>
                                            </div>
                                            <div class="field-wrap">
                                                <%= f.input :email, required: true, label: "Addresse Email", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>                                           
                                            <div class="field-wrap"> 
                                                <%= f.input :password, required: true, label: "Mod De Passe", input_html: {tag: "span", class: "req", style:"color: white"}, wrapper: false, label_html: { class: "label" }, hint: ("#{@minimum_password_length} Character minimum" if @minimum_password_length) %>           
                                            </div>
                                            <div class="field-wrap">
                                                <%= f.input :password_confirmation, required: true, label: "Comfirmaton du Mot De Passe", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                            <div class="field-wrap">
                                                <%= f.file_field :avatar, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>                                        
                                            <button type="submit" class="button button-block">Je M'inscris</button>                                   
                                        <% end %>                                       
                                    </div> 

                                     
                                    <div id="login"> 
                                        <h2>Bon Retou</h2>
                                        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>                    
                                            <div class="field-wrap">
                                                <%= f.input :email, required: true, label: "Adres Imel", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                            <div class="field-wrap">
                                                <%= f.input :password, required: true, label: "Modpas", input_html: {tag: "span", class: "req"} , wrapper: false, label_html: { class: "label" } %>           
                                            </div>
                                            <button class="button button-block">Connectez-Vous</button>
                                        <% end %>
				                        <%= render "devise/shared/links" %>
                                    </div> 
                                </div>    
                        </div>   
                    </div> 
                </div> 
            </div> 
        </div> 
    </section> 
</div>
      

