<div class="main-area">
<section class="help-us-area pt-80 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title-style-two text-center">
                    <h2>NOU BAY ENFOMASYON KI SOTI FYAB</h2>
                    <p> TOUT OPINON KONTE POU NOU!</P>
                
                     <!-- Sign in form -->
                    <div class="form"> 
                        <ul class="tab-group1">
                            
                            <li class="tab active"><a href="#login">Rantre</a></li>
                        </ul>
                         
                        <h1>BON RETOU!</h1>
                        
                        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="field-wrap">
                                <%= f.input :email, required: true, label: "Adres Imel", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                            </div>
                        
                            <div class="field-wrap">   
                                <%= f.input :password, required: true, label: "Modpas", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>           
                            </div>
                            <%= f.input :remember_me, label: "Sonje Imel Mwen",wrap_with: { tag: 'p', tag: 'a', class: 'forgot' }, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
                    
                            <!--<p class="forgot"><a href="#">Forgot Password?</a></p>-->
                            <button class="button button-block">Rantre</button>
                        <% end %>
	
	                    <%= render "devise/shared/links" %>
                   
                                
                    </div><!-- /form -->  
                </div> 
            </div>
        </div>
    </div>
</section>
    