<% provide(:title, "Se Connecter") %>
<div class="main-area"><!-- Start main area -->
    <section class="help-us-area pt-80 pb-80"> <!-- Start section area -->
        <div class="container"> <!-- container area -->
            <div class="row"> <!-- Start row area -->
                <div class="col-sm-12"> <!-- Start column -->
                    <div class="section-title-style-two text-center">
                        <h2>VOULEZ-VOUS PARTICIPEZ DANS NOS DISCUSSIONS?</h2>
                        <!--<p>Bon Retou...!</p>-->

                            <!-- Sign up form -->
                            <div class="form"> 
      
                                <ul class="tab-group">
                                    <li class="tab active"><a href="#login">Connectez-vous</a></li>
                                    <li class="tab"><a href="#signup">Enregistrez-vous</a></li>
                                </ul>

                                <div class="tab-content">
                                    <div id="login">  <!--start -signin -->
                                       <h2>Bon Retour</h2>
                                        
                                        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        
                                            <div class="field-wrap">
                                                <%= f.input :email, required: true, label: "Addresse email", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                        
                                            <div class="field-wrap">
                                                <%= f.input :password, required: true, label: "Mot De Passe", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>           
                                            </div>
                                             <!--<p class="forgot"><a href="#">Forgot Password?</a></p>-->
                                            <button class="button button-block">Rentrez</button>
                                    
                                        <% end %>
                                        <%= render "devise/shared/links" %>
                                    </div> <!--signin end-->

                                    <div id="signup">   
                                       <h2>Enregistrez-vous Gratuitement</h2>
                                    
                                        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                            <%= f.error_notification %>

                                            <div class="top-row">
                                              <div class="field-wrap">
                            
                                                 <%= f.input :username, label: "Prenom", required: true, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                              </div>

                                              <div class="field-wrap">
                                                 <%= f.input :userlastname, label: "Nom De Famille", required: true, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                              </div>
                                            </div>

                                            <div class="field-wrap">
                                                <%= f.input :email, required: true, label: "Addresse Email", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                            
                                            <div class="field-wrap"> 
                                                <%= f.input :password, required: true, label: "Mot De Passe", input_html: {tag: "span", class: "req", style:"color: white"}, wrapper: false, label_html: { class: "label" }, hint: ("#{@minimum_password_length} karakte pou pi piti" if @minimum_password_length) %>           
                                            </div>

                                            <div class="field-wrap">
                                                <%= f.input :password_confirmation, required: true, label: "Comfirmez Votre Mot De Passe", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>

                                            <div class="field-wrap">
                                                <%= f.file_field :avatar, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                            
                                            <button type="submit" class="button button-block">Je M'inscris</button>
                                    
                                        <% end %>
                                        
                                    </div> <!--signup end-->
                               
                                </div><!-- End content-->     
                            </div> <!-- End form-->
                        </div> <!-- End div -->
                    </div> <!-- End column-->
                </div> <!--End row-->
            </div> <!--End container area -->
    </section> <!-- End section -->
</div><!-- End main area -->

      
      



