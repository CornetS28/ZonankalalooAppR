
<div class="main-area"><!-- Start main area -->
    <section class="help-us-area pt-80 pb-80"> <!-- Start section area -->
        <div class="container"> <!-- container area -->
            <div class="row"> <!-- Start row area -->
                <div class="col-sm-12"> <!-- Start column -->
                    <div class="section-title-style-two text-center">
                        <h2>OU VLE PATISIPE NAN DISKISYON YO?</h2>
                        <p>THIS PART IS COMMING SOON..!</p>

                            <!-- Sign up form -->
                            <div class="form"> 
      
                                <ul class="tab-group">
                                    <li class="tab active"><a href="#login">Rantre</a></li>
                                    <li class="tab"><a href="#signup">Anrejiste</a></li>
                                </ul>

                                <div class="tab-content">
                                    <div id="login">  <!--start -signin -->
                                        <h1>Bon Retou</h1>
                                        
                                        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        
                                            <div class="field-wrap">
                                                <%= f.input :email, required: true, label: "Adres Imel", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                        
                                            <div class="field-wrap">
                                                <%= f.input :password, required: true, label: "Modpas", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" }, hint: ("#{@minimum_password_length} karakte pou pi piti" if @minimum_password_length) %>           
                                            </div>

                                            <p class="forgot"><%= f.input :remember_me, label: "Sonje Imel Mwen",wrap_with: { tag: 'p',tag: 'a', class: 'forgot' }, wrapper: false, as: :boolean if devise_mapping.rememberable? %></p>
                                            <!--<p class="forgot"><a href="#">Forgot Password?</a></p>-->
                                            <button class="button button-block">Rantre</button>
                                    
                                        <% end %>
                                        <%= render "devise/shared/links" %>
                                    </div> <!--signin end-->

                                    <div id="signup">   
                                       <h1>Anrejiste Gratis</h1>
                                    
                                        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                            <%= f.error_notification %>

                                            <div class="top-row">
                                              <div class="field-wrap">
                                                 <%= f.input :username, label: "Non", required: true, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                              </div>

                                              <div class="field-wrap">
                                                 <%= f.input :userlastname, label: "Siyati", required: true, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                              </div>
                                            </div>

                                            <div class="field-wrap">
                                                <%= f.input :email, required: true, label: "Adres Imel", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                            
                                            <div class="field-wrap"> 
                                                <%= f.input :password, required: true, label: "Modpas", input_html: {tag: "span", class: "req", style:"color: white"}, wrapper: false, label_html: { class: "label" }, hint: ("#{@minimum_password_length} karakte pou pi piti" if @minimum_password_length) %>           
                                            </div>

                                            <div class="field-wrap">
                                                <%= f.input :password_confirmation, required: true, label: "Konfime Modpas", input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>

                                            <div class="field-wrap">
                                                <%= f.file_field :avatar, input_html: {tag: "span", class: "req"}, wrapper: false, label_html: { class: "label" } %>
                                            </div>
                                            
                                            <button type="submit" class="button button-block">Anrejiste</button>
                                    
                                        <% end %>
                                        
                                    </div> <!--signup end-->
                               
                                </div><!-- End content-->     
                            </div> <!-- End form-->
                        </div> <!-- End div -->
                    </div> <!-- End column-->
                </div> <!--End row-->
            </div> <!--End container area -->
    </section> <!-- End section -->
</div><!-- End main area -->

      
      



