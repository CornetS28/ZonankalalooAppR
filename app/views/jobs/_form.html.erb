
<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="input-block-level">
      <li><%= f.input :company, input_html: { class: 'input', placeholder:"Non Konpayi A" }, wrapper: false, label_html: { class: 'label' } %></li>
      <li><%= f.input :job_title, input_html: { class: 'input', placeholder:"Ki Domen" }, wrapper: false, label_html: { class: 'label' } %></li>
      <li><%= f.input :position, input_html: { class: 'input', placeholder:"Pozisyon" }, wrapper: false, label_html: { class: 'label' } %></li>
      <li><%= f.input :description, input_html: { class: 'input', placeholder:"Deskripsyon" }, wrapper: false, label_html: { class: 'label' } %></li>
      <li><%= f.input :location, input_html: { class: 'input', placeholder:"Adres" }, wrapper: false, label_html: { class: 'label' } %></li>  
       <li><%= f.input :link, input_html: { class: 'input', placeholder:"Lyen site la" }, wrapper: false, label_html: { class: 'label' } %></li>  
      <li> <strong>Ouvri:</strong><%= f.input :opening_date %></li>
      <li><strong>Bout:</strong><%= f.input :closingdate %></li>
    </div>
   <div class="field">
     <div class="control">
       <%= f.button :submit, class:"btn-style btn-md bo-ra-5" %>
     </div>
   </div>
<% end %>