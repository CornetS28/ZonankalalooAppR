<% provide(:title, "#{@partner.company_name }") %>

<p id="notice"><%= notice %></p>




<h1><span>A Propos de Partenaire</span></h1>

<table class="responstable">
  <tr>
    <th>Nom</th>
    <th data-th="Driver details"><span>Lien Electronique</span></th>
    <th>Image</th>
  </tr>
  
  <tr>
    <td><%= @partner.company_name %> <br />
     <%= link_to 'Modifier', edit_partner_path(@partner) %> |
<%= link_to 'Retour', partners_path %>
    </td>
    <td><%= @partner.official_link %></td>
    <td><%= image_tag @partner.image if @partner.image.attached? %></td>
  </tr>
</table>

<style>
.responstable {
  margin: auto;
  width: 60%;
  overflow: hidden;
  background: #FFF;
  color: #00000;
  border-radius: 10px;
  border: 1px solid #0aaaa0;
}
.responstable tr {
  border: 1px solid #D9E4E6;
}
.responstable tr:nth-child(odd) {
  background-color: #EAF3F3;
}
.responstable th {
  display: none;
  border: 1px solid #FFF;
  background-color: #0aaaa0;
  color: #FFF;
  padding: 1em;
}
.responstable th:first-child {
  display: table-cell;
  text-align: center;
}
.responstable th:nth-child(2) {
  display: table-cell;
}
.responstable th:nth-child(2) span {
  display: none;
}
.responstable th:nth-child(2):after {
  content: attr(data-th);
}
@media (min-width: 480px) {
  .responstable th:nth-child(2) span {
    display: block;
  }
  .responstable th:nth-child(2):after {
    display: none;
  }
}
.responstable td {
  display: block;
  word-wrap: break-word;
  max-width: 7em;
}
.responstable td:first-child {
  display: table-cell;
  text-align: center;
  border-right: 1px solid #D9E4E6;
}
@media (min-width: 480px) {
  .responstable td {
    border: 1px solid #D9E4E6;
  }
}
.responstable th, .responstable td {
  text-align: left;
  margin: .5em 1em;
}
@media (min-width: 480px) {
  .responstable th, .responstable td {
    display: table-cell;
    padding: 1em;
  }
}

</style>
