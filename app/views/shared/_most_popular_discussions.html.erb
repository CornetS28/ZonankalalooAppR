 <div class="col-sm-4">
    <div class="blog-sidebar">
        <div class="event-sidebar">
            <!-- Start event popular post -->
            <div class="event-popular-post">
                <div class="event-sidt-title">
                    <h3>LES ARTICLES LES PLUS LUS</h3>
                </div>
                <!-- Start popular item -->
                <% Discussion.all.order('view desc')[0..9].each do |discussion| %>
                    <div class="popular-idget mb-30 row blog-text">
                        <%= link_to discussion do %>
                            <div class="col-sm-4" id="left-div">
                                <div class="post-thum">
                                <%= image_tag discussion.image %> 
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="ev-post-text" id="right-div">
                                    <p><%= truncate(discussion.title, length: 25) %></p>
                                    <span><%= (discussion.created_at).strftime "%d/%m/%Y"  %> <br /> <%= discussion.view%> Vues</span>
                                </div>
                            </div>
                        <% end %>
                    </div>
                  
                <% end %>
            </div>   <!-- End popular views --> 
        </div>
    </div>
</div>
