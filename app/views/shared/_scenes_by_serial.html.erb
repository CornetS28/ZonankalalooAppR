<!--TO BE ERASED -->

<section class="people-says-area2 pt-54 pb-20" id="scenefix">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<!--<div class="container">-->
				<div class="row">
					<div class="col-sm-12">
						<div class="people-say-slide">
							<!-- Start single people -->

							<% @scenes.each do |scene| %>
							<div class="col-sm-12">
								<div class="col-sm-5" id="centerScenes">
									<!--starts here -->
									<div class="single-blog mb-30" id="no-margin-scene">
										<div class="blo-image-and-date" id="blo-image">
                                            <%= image_tag scene.image if scene.image.attached? %> 
                                            <% if scene.serial %> 
                                                <%= link_to scene.serial.mainTitle, scene.serial %> 
                                            <% end %>
										</div>
										
										<div class="blog-text" style="color: white;">
											<h3>
												<%= scene.title %>
											</h3>
											<%= scene.content.to_s %>
											<p>
												<em style="color: #2EAAA0;">
													<small>
                                                        PubliÃ©, il y a 
                                                        <%= time_ago_in_words(scene.created_at) %>
                                                        , par <span style="color: blanchedalmond;"><%= scene.user.username %> <%= scene.user.userlastname %></span>
													</small>
												</em>
											</p>
											<% if scene_author(scene) || has_role?(:admin) %>
											    <div class="column has-text-left">
												<%= link_to edit_scene_path(scene) do %>
												    <span class="icon is-small"><i class="fa fa-pencil"></i></span>
                                                <% end %> | 
                                                <%= link_to scene, method: :delete, data: {confirm: "En etes vous sure" } do %>
												    <span class="icon is-small"><i class="fa fa-trash-o"></i></span>
												<% end %>
											   </div>
											<% else %>
											<div class="column has-text-left">
												<span class="icon is-small"><i class="fa fa-hand-o-right" aria-hidden="true"></i></span>
											</div>
											<% end %> <%= link_to serials_path do %>
											<p style="margin-top: -2rem; float:right !important; margin-bottom: 0rem;">
												Toutes les Series
											</p>
											<% end %>
										</div>
									</div>
								</div>
							</div>
							<!-- End blog -->
							<% end %>

							<!-- End single people -->
						</div>
					</div>
				</div>
				<!--</div>-->
			</div>
		</div>
	</div>
</section>
